<!-- Sign Up
==========================================-->
<div class="home">
    <div class="overlay">
        <div class="container">
            <div class="row">
                <div class="col col-md-4 col-md-offset-4">
                    <div id="signup" class="signup-form">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <form action="/create" method="POST">
                                    <div class="form-group">
                                        <label for="un">Username</label>
                                        <input type="text" class="form-control" id="un" name="username" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="em">Email</label>
                                        <input type="text" class="form-control" id="em" name="email" required>
                                    </div>
                                    <div class="form-group">
                                        <label for="pass">Password</label>
                                        <input type="password" class="form-control" id="pass" name="password" required>
                                    </div>
                                    <div class="signup-submit">
                                        <p>Already have an account? <a href="login">Login</a>.</p>
                                        <button class="btn pull-right" type="submit">Sign Up</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
