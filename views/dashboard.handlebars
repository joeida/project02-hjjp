<!-- Dashboard
==========================================-->
<div class="dashboard content-dash">
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="container">
            <!-- Content Header (Page header) -->
            <section class="content-header">
                <h1>
            Your Risk Assessments
          </h1>
            </section>

            <!-- Main row -->
            <div class="row">
                {{#each data}}
                    <div class="col-md-6">
                        {{!-- {{ifCond risk}}
                        --}} <div class="box {{box-color this.risk value box}}">
                            <div class="box-header with-border">
                                <h3 class="box-title">{{this.location}}</h3>
                                <div class="box-tools pull-right">
                                    <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
                                    </button>
                                    <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                                </div>
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="row">
                                    <div class="col-md-9">
                                        {{> data/news}}
                                    </div>
                                    <div class="col-xs-3 text-center">
                                        <a href="#" class="risk-info">
                                            <button class="btn info-box {{btn-color this.risk value button}}">
                                                <div class="info-box-content">
                                                    <span class="info-box-text">Risk</span>
                                                    <span class="info-box-number">{{this.risk}}<small>%</small></span>
                                                    <a href="#">More info</a>
                                                </div>
                                                <!-- /.info-box-content -->
                                            </button>
                                            <!-- /.info-box -->
                                        </a>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        {{> data/news}} {{> data/news}}

                                    </div>
                                    <!-- /.col -->
                                </div>
                                <!-- /.row -->
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer no-padding text-center">
                                <div class="row box-icons">
                                    <div class="col-xs-4">
                                        <a href="#" alt="Safehouses"><i class="fa fa-home fa-2x box-icon"></i><p>Safehouses</p></a>
                                    </div>
                                    <div class="col-xs-4">
                                        <a href="#" alt="Weather"><i class="fa fa-bolt fa-2x box-icon"></i><p>Weather</p></a>
                                    </div>
                                    <div class="col-xs-4">
                                        <a href="#" alt="Travel"><i class="fa fa-subway fa-2x box-icon"></i><p>Travel</p></a>
                                    </div>
                                    <div class="col-xs-4">
                                        <a href="#" alt="Travel"><i class="fa fa-file-text fa-2x box-icon"></i><p>Overview</p></a>
                                    </div>
                                </div>
                            </div>
                            <!-- /.footer -->
                    </div>
                    <!-- /.box -->
            </div>
            <!-- /.col -->
            {{/each}}
    </div>
    <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
</div>

